	JP	NZ,ERROR
	LD	HL,(DLABEL)
	LD	A,H
	OR	L
	LD	C,30
	JP	NZ,ERROR
	LD	HL,(DATA)
	POP	AF
	OR	A
	JR	Z,ORG
	DEC	A
	JR	Z,DSJ
