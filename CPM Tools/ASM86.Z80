NODEC:
	LD	HL,(PC)
	LD	(LSTRET),HL
	EX	DE,HL
	LD	HL,(RETPT)
	LD	A,H
	OR	L
	JR	Z,DORET
	LD	(HL),1
	INC	HL
	LD	(HL),E
	INC	HL
	LD	(HL),D
