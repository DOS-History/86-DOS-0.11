	JR	Z,FINI
	INC	HL
	LD	E,(HL)		;Get address
	INC	HL
	LD	D,(HL)
	PUSH	HL
	INC	A		;ORG?
	JR	Z,DORG
	INC	A		;PUT?
	JR	Z,DPUT
DDS:
;Handle DS pseudo-op
	LD	HL,(PC)
	ADD	HL,DE
	LD	(PC),HL
	LD	HL,(HEXADD)
	ADD	HL,DE
	LD	(HEXADD),HL
	JR	SPEND

