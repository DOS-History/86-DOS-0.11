	POP	HL
	POP	DE
	RET	Z
	PUSH	DE
	PUSH	HL
	LD	DE,LSTBUF+BUFSIZ
	OR	A
	SBC	HL,DE
	POP	HL
	POP	DE
	RET	Z
	PUSH	DE
	PUSH	HL
	LD	DE,HEXBUF+BUFSIZ+BUFSIZ
	OR	A
	SBC	HL,DE
	POP	HL
	POP	DE
	RET	NZ
