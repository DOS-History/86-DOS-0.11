CODBYT:
	PUSH	AF
	LD	A,(HEXFCB)
	CP	'Z'
	JP	Z,OUTRET
	LD	DE,(LASTAD)
	LD	HL,(HEXADD)
	LD	(LASTAD),HL
	INC	DE
	LD	A,(HEXCNT)
	CP	-5
	JR	Z,NEWLIN
	OR	A
	SBC	HL,DE
	JR	Z,AFHEX
	CALL	ENHEXL
