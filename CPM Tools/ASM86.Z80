	LD	A,':'
	CALL	PUTCHR
	LD	A,-4
	LD	(HEXCNT),A
	XOR	A
	LD	(CHKSUM),A
	LD	HL,(HEXPNT)
	LD	(HEXLEN),HL
	CALL	HEXBYT
	LD	A,(HEXADD+1)
	CALL	HEXBYT
	LD	A,(HEXADD)
	CALL	HEXBYT
	XOR	A
	CALL	HEXBYT
