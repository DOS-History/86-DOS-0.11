	LD	B,A
	LD	HL,CHKSUM
	ADD	A,(HL)
	LD	(HL),A
	LD	A,B
	CALL	UHALF
	CALL	PUTCHR
	LD	A,B
	CALL	LHALF
	CALL	PUTCHR
	LD	HL,HEXCNT
	INC	(HL)
