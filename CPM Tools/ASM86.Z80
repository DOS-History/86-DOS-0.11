	POP	HL
	OR	A		;Both buffers filled?
	RET	NZ
	LD	C,SETDMA
	EX	DE,HL
	CALL	SYSTEM
	LD	DE,HEXFCB
	LD	C,SEQWRT
	CALL	SYSTEM
	EX	DE,HL
	OR	A
	RET	Z
	LD	HL,WRTERR
	JP	PRERR

