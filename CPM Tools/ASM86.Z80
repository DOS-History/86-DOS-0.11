DORET:
	POP	AF
	JP	PUT
GRP17:
	CALL	PUT
	CALL	GETOP
	CP	CONST
	LD	C,20
	JP	NZ,ERROR
	LD	HL,(DATA)
	LD	DE,(PC)
	INC	DE
	SBC	HL,DE
	LD	(DATA),HL
	CALL	PUTBYT
	LD	HL,(DLABEL)
	LD	A,H
	OR	L
	RET	NZ
	LD	HL,(DATA)
